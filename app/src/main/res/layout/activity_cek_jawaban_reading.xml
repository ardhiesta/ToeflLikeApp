<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cek_jawaban_reading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.djakaumbarawurung.persipantestcept.ActivityCekJawabanReading">

    <ScrollView
        android:id="@+id/svCekReadingTop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true">

        <!-- TextView untuk menampilkan narasi -->
        <TextView
            android:id="@+id/tvNarasiCekReading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[narasi reading]"
            android:textColor="#000000"
            android:textSize="22sp" />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/svCekReadingTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSoalCekReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[pertanyaan reading]"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your answer is :"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- TextView untuk menampilkan jawaban user -->
            <TextView
                android:id="@+id/tvJawabanUserCekReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="[jawaban user]"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The right answer is :"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- TextView untuk menampilkan kunci jawaban -->
            <TextView
                android:id="@+id/tvKunciCekReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="[kunci jawaban]"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explanation :"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- TextView untuk menampilkan penjelasan -->
            <TextView
                android:id="@+id/tvPenjelasanCekReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[penjelasan reading]"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <!-- Button untuk menampilkan aktivitas user sebelumnya -->
        <Button
            android:id="@+id/btnBackCekReading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="tampilkanBackAktivitasUserReading"
            android:text="back" />

        <!-- Button untuk menampilkan aktivitas user selanjutnya -->
        <Button
            android:id="@+id/btnNextCekReading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="tampilkanNextAktivitasUserReading"
            android:text="next" />
    </LinearLayout>
</RelativeLayout>
